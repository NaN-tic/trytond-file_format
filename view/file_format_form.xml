<form string="File Format">
    <group id="main_file_info" colspan="4" col="6">
        <label name="name"/>
        <field name="name"/>
        <label name="model"/>
        <field name="model"/>
        <label name="file_type"/>
        <field name="file_type"/>
    </group>
    <label name="path"/>
    <field name="path"/>
    <label name="file_name"/>
    <field name="file_name"/>
    <label name="state"/>
    <field name="state"/>
    <notebook colspan="4">
        <page string="CSV" id="csv_fields"
            states="{'invisible': Eval('file_type') != 'csv'}">
            <group id="flag_fields" colspan="4" col="6">
                <label name="header"/>
                <field name="header"/>
                <label name="separator"/>
                <field name="separator"/>
                <label name="quote"/>
                <field name="quote"/>
            </group>
            <field name="fields" colspan="4"/>
        </page>
        <page string="XML" id="xml_fields"
            states="{'invisible': Eval('file_type') != 'xml'}">
            <field name="xml_format"/>
        </page>
    </notebook>
</form>
